profiles {
    // config for running on UTS HPC
    pbs {
        process {
            withName: get_fasta{
                executor = 'pbspro'
                queue = 'smallq'
                memory = '2 GB'
                cpus = 2
            }
            withName: mash_sketch{
                executor = 'pbspro'
                queue = 'workq'
                memory = '20 GB'
                cpus = 8
            }
            withName: mash_dist{
                executor = 'pbspro'
                queue = 'workq'
                memory = '20 GB'
                cpus = 8
            }
        }
    }